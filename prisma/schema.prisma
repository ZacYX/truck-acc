model Photo {
  id     Int    @id @default(autoincrement())
  height Int    @default(200)
  width  Int    @default(100)
  url    String
}

model Address {
  id     Int    @id @default(autoincrement())
  street String
  city   String
  zip    String
}

enum Size {
  Small
  Medium
  Large
  XLarge
}

enum Color {
  Red
  Green
  Blue
}
